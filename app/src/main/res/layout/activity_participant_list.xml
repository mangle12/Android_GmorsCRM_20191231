<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <tw.com.masterhand.gmorscrm.view.Appbar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_size"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_transparent_v_8dp"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:showDividers="middle">

            <LinearLayout
                android:id="@+id/containerAcceptYes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_transparent_v_3dp"
                android:orientation="vertical"
                android:showDividers="middle"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_size"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:text="@string/accept_yes"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerAcceptMaybe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_transparent_v_3dp"
                android:orientation="vertical"
                android:showDividers="middle"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_size"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:text="@string/accept_maybe"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerAcceptNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_transparent_v_3dp"
                android:orientation="vertical"
                android:showDividers="middle"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_size"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:text="@string/accept_no"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerAcceptNone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_transparent_v_3dp"
                android:orientation="vertical"
                android:showDividers="middle"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/list_size"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:text="@string/accept_none"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
