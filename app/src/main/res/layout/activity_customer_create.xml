<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tw.com.masterhand.gmorscrm.activity.project.ProjectCreateActivity">

    <tw.com.masterhand.gmorscrm.view.AppbarEdit
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_size"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_white_v"
            android:orientation="vertical"
            android:showDividers="middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLogo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="16dp"
                    android:background="@mipmap/common_namecard"
                    android:text="Logo"
                    android:textColor="@color/orange"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray_light_v"
                    android:orientation="vertical"
                    android:showDividers="middle|end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/customer_show_name"
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>

                        <EditText
                            android:id="@+id/editText_show_name"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/list_size"
                            android:background="@drawable/bg_transparent"
                            android:hint="@string/hint_not_required"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/customer_name_chinese"
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>

                        <EditText
                            android:id="@+id/editText_name_chinese"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/list_size"
                            android:background="@drawable/bg_transparent"
                            android:hint="@string/hint_not_required"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/customer_name_english"
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>

                        <EditText
                            android:id="@+id/editText_name_english"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/list_size"
                            android:background="@drawable/bg_transparent"
                            android:hint="@string/hint_not_required"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="@string/principal"
                            android:textColor="@color/gray"
                            android:textSize="12sp"/>

                        <EditText
                            android:id="@+id/editText_principal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/list_size"
                            android:background="@drawable/bg_transparent"
                            android:hint="@string/hint_not_required"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:singleLine="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Switch
                android:id="@+id/switchType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:checked="false"
                android:drawablePadding="8dp"
                android:drawableStart="@mipmap/common_vip"
                android:paddingEnd="16dp"
                android:paddingStart="12dp"
                android:text="@string/important_customer"/>

            <Button
                android:id="@+id/btnLevel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:drawableEnd="@mipmap/common_tri_down"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/common_level"
                android:gravity="center_vertical|start"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:stateListAnimator="@null"
                android:text="@string/customer_level"
                android:textColor="@color/red"/>

            <Button
                android:id="@+id/btnTeam"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:drawableEnd="@mipmap/common_tri_down"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/common_team"
                android:gravity="center_vertical|start"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:stateListAnimator="@null"
                android:text="@string/customer_team"
                android:textColor="@color/red"/>

            <Button
                android:id="@+id/btnSource"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:drawableEnd="@mipmap/common_tri_down"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/common_source"
                android:gravity="center_vertical|start"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:stateListAnimator="@null"
                android:text="@string/customer_source"
                android:textColor="@color/red"/>

            <tw.com.masterhand.gmorscrm.view.ItemSelectLocation
                android:id="@+id/itemSelectLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/containerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_white_v"
                android:orientation="vertical"
                android:showDividers="middle"/>

            <tw.com.masterhand.gmorscrm.view.EditTextWithTitle
                android:id="@+id/etWebsite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:hint="@string/hint_not_required"
                android:inputType="textUri"
                android:maxLines="1"
                app:title="@string/website"/>

            <Button
                android:id="@+id/btnGroup"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:drawableEnd="@mipmap/common_tri_down"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/common_trade"
                android:gravity="center_vertical|start"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:stateListAnimator="@null"
                android:text="@string/group"/>

            <Button
                android:id="@+id/btnIndustry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:drawableEnd="@mipmap/common_tri_down"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/common_trade"
                android:gravity="center_vertical|start"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:stateListAnimator="@null"
                android:text="@string/industry"/>

            <Button
                android:id="@+id/btnCustomerType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:drawableEnd="@mipmap/common_tri_down"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/common_sort"
                android:gravity="center_vertical|start"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:stateListAnimator="@null"
                android:text="@string/customer_type"/>

            <EditText
                android:id="@+id/etProduct"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:drawablePadding="5dp"
                android:drawableStart="@mipmap/common_product"
                android:hint="@string/hint_product"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:textSize="14sp"/>


            <EditText
                android:id="@+id/etInvoiceNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/gray_light"
                android:hint="@string/hint_invoice_number"
                android:inputType="numberDecimal"
                android:maxLines="1"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_light"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/note"/>

                <EditText
                    android:id="@+id/etNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_transparent"
                    android:hint="@string/hint_note"
                    android:inputType="textMultiLine"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
