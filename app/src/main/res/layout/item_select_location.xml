<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:divider="@drawable/divider_white_v"
              android:orientation="vertical"
              android:showDividers="middle">

    <Button
        android:id="@+id/btnCountry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_size"
        android:background="@color/gray_light"
        android:drawableEnd="@mipmap/common_tri_down"
        android:drawablePadding="5dp"
        android:drawableStart="@mipmap/common_gobel"
        android:gravity="center_vertical|start"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        android:stateListAnimator="@null"
        android:text="@string/hint_country"/>

    <Button
        android:id="@+id/btnCity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_size"
        android:background="@color/gray_light"
        android:drawableEnd="@mipmap/common_tri_down"
        android:drawablePadding="5dp"
        android:drawableStart="@mipmap/common_location"
        android:gravity="center_vertical|start"
        android:paddingEnd="0dp"
        android:paddingStart="10dp"
        android:stateListAnimator="@null"
        android:text="@string/hint_city"/>

    <tw.com.masterhand.gmorscrm.view.EditTextWithTitle
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_size"
        android:background="@color/gray_light"
        android:hint="@string/hint_address"
        android:inputType="textPostalAddress"
        app:title="@string/address"/>
</LinearLayout>