<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/gray_light"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="12月23日-12月31日"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/textView_period"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="2016"
                android:textColor="@color/gray"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="70dp">

                <LinearLayout
                    android:id="@+id/linearLayout_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingEnd="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/textView_week_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/week_unit"/>

                    <TextView
                        android:id="@+id/textView_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="31"
                        android:textSize="28sp"/>


                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="28dp"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/textView_sunday"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/oval_gray"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <View
                                android:id="@+id/pointSunday"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/oval_red"
                                android:visibility="invisible"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="日"
                            android:textColor="@color/gray"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="28dp"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/textView_monday"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/oval_gray"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <View
                                android:id="@+id/pointMonday"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/oval_red"
                                android:visibility="invisible"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="一"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="28dp"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/textView_tuesday"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/oval_gray"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <View
                                android:id="@+id/pointTuesday"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/oval_red"
                                android:visibility="invisible"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="二"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="28dp"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/textView_wednesday"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/oval_gray"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <View
                                android:id="@+id/pointWednesday"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/oval_red"
                                android:visibility="invisible"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="三"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="28dp"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/textView_thursday"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/oval_gray"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <View
                                android:id="@+id/pointThursday"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/oval_red"
                                android:visibility="invisible"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="四"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="28dp"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/textView_friday"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/oval_gray"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <View
                                android:id="@+id/pointFriday"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/oval_red"
                                android:visibility="invisible"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="五"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="28dp"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/textView_saturday"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/oval_gray"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="16sp"/>

                            <View
                                android:id="@+id/pointSaturday"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/oval_red"
                                android:visibility="invisible"/>
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:text="六"
                            android:textColor="@color/gray"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_count"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/oval_red"
        android:gravity="center"
        android:text="N"
        android:textColor="@color/white"
        android:visibility="invisible"/>
</RelativeLayout>