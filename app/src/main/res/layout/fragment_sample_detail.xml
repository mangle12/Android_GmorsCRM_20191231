<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="90dp">

        <tw.com.masterhand.gmorscrm.view.CompanyCard
            android:id="@+id/companyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"/>

        <tw.com.masterhand.gmorscrm.view.ItemProject
            android:id="@+id/itemProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_gray_v"
            android:orientation="vertical"
            android:padding="16dp"
            android:showDividers="middle|end">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:drawableEnd="@mipmap/common_application4"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="@string/empty_show"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/containerStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_test_start_time"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_delivery_time"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvDeliveryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_price"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_reason"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvReason"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_source"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvSource"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerImport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_import"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvImport"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_delivery"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_intro"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvIntro"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerPeriod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_test_period"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerBasis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_test_basis"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvBasis"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerReceiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_receiver"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvReceiver"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_receiver_address"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/sample_receiver_phone"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/quotation_item"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <LinearLayout
                    android:id="@+id/containerItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_gray_light_v"
                    android:orientation="vertical"
                    android:showDividers="middle"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnContacter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/transparent"
                android:drawableEnd="@mipmap/common_arrow_right"
                android:gravity="start|center_vertical"
                android:paddingEnd="8dp"
                android:stateListAnimator="@null"
                android:text="@string/contact"/>

            <Button
                android:id="@+id/btnApproval"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/transparent"
                android:drawableEnd="@mipmap/common_arrow_right"
                android:gravity="start|center_vertical"
                android:paddingEnd="8dp"
                android:stateListAnimator="@null"
                android:text="@string/approver"/>

            <Button
                android:id="@+id/btnResource"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_size"
                android:background="@color/transparent"
                android:drawableEnd="@mipmap/common_arrow_right"
                android:gravity="start|center_vertical"
                android:paddingEnd="8dp"
                android:stateListAnimator="@null"
                android:text="@string/online_resource"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/assistant"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvAssistant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/approval_description"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvApprovalDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/relative_photo"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/container_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider_transparent_h_8dp"
                        android:orientation="horizontal"
                        android:showDividers="middle|end"/>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/note"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/list_size"
                    android:gravity="center_vertical"
                    android:text="@string/empty_show"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/builder"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tvBuilder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_show"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout_conversation_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_size"
            android:background="@color/gray_light"
            android:visibility="gone">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:text="@string/conversation"/>

            <ImageButton
                android:id="@+id/imageButton_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/transparent"
                android:src="@mipmap/common_add"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/container_conversation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/divider_transparent_v_8dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:showDividers="middle"
            android:visibility="gone"/>
    </LinearLayout>
</ScrollView>
