<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calender_cell_height">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bg_calendar_cell_selector"/>

    <LinearLayout
        android:id="@+id/linearLayout_calendar_cell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:duplicateParentState="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/indicate_calendar_cell_empty"
            android:duplicateParentState="true"
            android:text=""
            android:textColor="@color/calendar_cell_date"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/textView_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text=""
            android:textAllCaps="true"
            android:textColor="@color/calendar_cell_week"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_month"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text=""
        android:textColor="@color/gray_dark"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/ivShadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:duplicateParentState="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/shadow_calendar_cell_selector"/>


</RelativeLayout>